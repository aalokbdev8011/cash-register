<div class="product-wrap mx-auto">
  <h2 class="mb-3">Product offers</h2>
  <div class="text-end"><%= link_to "New product offer", new_admin_product_offer_path, class: 'btn btn-success' %></div>
  <% unless @product_offers.blank? %>
    <div class="table-responsive">
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Product Name</th>
            <th scope="col">Discount</th>
            <th scope="col">Applied on Quantity above</th>
            <th scope="col">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @product_offers.each_with_index do |product_offer, index| %>
            <tr>
              <th scope="row"><%= index+1 %></th>
              <td><%= product_offer.product.name %></td>
              <td><%= product_offer.discount %></td>
              <td><%= product_offer.for_quantity %></td>
              <td class="d-flex align-items-center gap-3">
                <%= link_to "Edit", edit_admin_product_offer_path(product_offer) , class: 'btn btn-primary btm-sm'%>
                <%= button_to "Delete", admin_product_offer_path(product_offer) , class: 'btn btn-danger btm-sm', method: :delete %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% end %>
</div>
