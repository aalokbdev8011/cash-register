<p style="color: green"><%= notice %></p>

<h1>Product offers</h1>
<%= link_to "New product offer", new_admin_product_offer_path %>

<% unless @product_offers.blank? %>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Product Name</th>
        <th scope="col">Discount</th>
        <th scope="col">Applied on Quantity above</th>
      </tr>
    </thead>
    <tbody>
      <% @product_offers.each_with_index do |product_offer, index| %>
        <tr>
          <th scope="row"><%= index+1 %></th>
          <td><%= product_offer.product.name %></td>
          <td><%= product_offer.discount %></td>
          <td><%= product_offer.for_quantity %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>







