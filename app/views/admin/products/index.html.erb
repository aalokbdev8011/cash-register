<div class="product-wrap mx-auto">
  <h2 class="mb-3">Products</h2>
  <div class="text-end"><%= link_to "New product", new_admin_product_path, class: 'btn btn-success' %></div>
  <% unless @products.blank? %>
    <div class="table-responsive">
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Product Code</th>
            <th scope="col">Product Name</th>
            <th scope="col">Price</th>
            <th scope="col">Action</th>
          </tr>
        </thead>
        <tbody>
          <% @products.each_with_index do |product, index| %>
            <tr>
              <th scope="row"><%= index+1 %></th>
              <td><%= product.product_code %></td>
              <td><%= product.name %></td>
              <td><%= product.price %></td>
              <td class="d-flex align-items-center gap-3">
                <%= link_to "Edit", edit_admin_product_path(product) , class: 'btn btn-primary btm-sm'%>
                <%= button_to "Delete", admin_product_path(product) , class: 'btn btn-danger btm-sm', method: :delete %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% end %>
</div>
